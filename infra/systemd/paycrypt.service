# Example systemd unit for PayCrypt Unified Gateway

[Unit]
Description=PayCrypt Unified Gateway
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory=/var/www/paycrypt-unified
Environment="FLASK_ENV=production"
EnvironmentFile=/var/www/paycrypt-unified/.env
ExecStart=/var/www/paycrypt-unified/venv/bin/gunicorn -w 4 -b 127.0.0.1:8000 wsgi:app
Restart=always

[Install]
WantedBy=multi-user.target
